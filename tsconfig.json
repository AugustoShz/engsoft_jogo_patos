{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": [
      "es5",
      "es6"
    ],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./src/interfaces"
    ],
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    
    /* Type Checking */
    "strict": true,


    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/", "index.ts",
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "bin/**",
    "build"
  ]
}